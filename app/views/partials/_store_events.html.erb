<div class="col-sm-4 col-lg-4 col-md-4">
  <a href="<%=vendor_event_path(vendor: featured_event.user.url, id: featured_event.id)%>">
  <div class="feature-card thumbnail">
    <%= image_tag featured_event.image_url, class: "img-responsive",
                  alt: "#{featured_event.name} image" %>
    <div class="caption clearfix">
      <h4 class="pull-right">
        <%= number_to_currency(featured_event.price) %>
      </h4>
      <h4>
        <%= link_to featured_event.name, vendor_event_path(vendor: featured_event.user.url, id: featured_event.id) %>
      </h4>
      <h6>
        <%= link_to featured_event.description, vendor_event_path(vendor: featured_event.user.url, id: featured_event.id) %>
      </h6>
    </div>
    <div class="clearfix btm-right">
      <% if featured_event.inactive? %>
      <%= button_to "Retired", {}, class: "btn btn-primary btn-sm",
          disabled: "disabled" %>
      <% else %>
        <% if validate_store_admin %>
        <%= link_to "Edit Event", edit_vendor_event_path(vendor: @event.user.url, id: @event.id),
          class: "btn btn-primary btn-sm" %>
        <% if @event.inactive? %>
          <%= link_to "Retired", {}, class: "btn btn-primary btn-sm",
                        disabled: "disabled" %>
        <% else %>
          <%= link_to "Remove Event", vendor_event_path(vendor: @event.user.url, id: @event.id), method: :delete,
            class: "btn btn-primary btn-sm" %>
        <% end %>

        <% else %>
          <%= button_to "Add to Cart", cart_items_path(event_id: featured_event.id),
          class: "btn btn-primary btn-sm pull-right" %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
