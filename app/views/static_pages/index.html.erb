<!-- Header -->
<header>
  <div class="main-image">
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">
            Welcome to <br><span id="main-title">Ocho<br>Tickets</span>
          </h1>
        </div>
      </div>
    </div>
  </div>
</header>
<!-- Page Content -->
<div class="container">
  <br>
  <div class="well">
    <div class="row">
      <div class="col-md-8">
        <h4>Receive the latest updates on all your favorite events!</h4>
      </div>
      <div class="col-md-4">
        <%= link_to "Become an Ocho MVP", account_new_path,
            class: "btn btn-lg btn-success btn-block"%>
      </div>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-3">
      <div id="sports-panel" class="panel panel-primary">
        <div class="panel-heading">
          <h4><i class="fa fa-fw fa-check"></i>Sports</h4>
        </div>
        <div class="panel-body" id="index-sports">
          <%= link_to "Shop Now", "/categories/sports",
                      class: "btn btn-default" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div id="music-panel" class="panel panel-primary">
        <div class="panel-heading">
          <h4><i class="fa fa-fw fa-gift"></i>Music</h4>
        </div>
        <div class="panel-body" id="index-music">
          <%= link_to "Shop Now", "/categories/music",
                      class: "btn btn-default" %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <div id="special-panel" class="panel panel-primary">
        <div class="panel-heading">
          <h4><i class="fa fa-fw fa-compass"></i>Special</h4>
        </div>
        <div class="panel-body" id="index-special">
          <%= link_to "Shop Now", "/categories/special",
                      class: "btn btn-default" %>
        </div>
      </div>
    </div>
  </div><!-- /.row -->
  <!-- Featured Products Section -->
  <div class="row">
    <%= render "partials/product_carousel" %>
  </div>
  <hr>
</div><!-- /.container -->
