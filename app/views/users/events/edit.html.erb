<div class="container">
 <ol class="breadcrumb">
   <li class="active">Edit Event</li>
 </ol>
</div>
<div class="container">
  <h1 class="text-center">Edit Event</h1>
  <div class="well col-sm-6 col-sm-offset-3">
    <%= form_for @event, :url => vendor_event_path do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", id: "event_form_name" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control",
                       id: "event_form_description" %>
    </div>
    <div class="form-group">
      <%= f.label :price %>
      <%= f.text_field :price, class: "form-control",
                       id: "event_form_price" %>
    </div>
    <div class="form-group">
      <%= f.label :category %>
      <%= collection_select :event, :category_id, Category.all, :id,
          :name, {},
          { class: "form-control", id: "event_form_category" } %>
    </div>
    <div class="form-group">
      <%= f.label :status, "Status" %>
      <%= f.select :status, [["Active", "active"], ["Retired", "inactive"]],
                   {}, { class: "form-control", id: "event_form_status" } %>
    </div>
    <div class="form-group">
      <%= f.label :image_url, "Image Url" %>
      <%= f.text_field :image_url, class: "form-control",
                       id: "event_form_image_url" %>
    </div>
      <%= f.submit "Edit Event", class: "btn btn-success" %>
    <% end %>
  </div>
</div>
