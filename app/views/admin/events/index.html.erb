<div class="container">
  <ol class="breadcrumb">
    <li><a href="<%= admin_dashboard_path %>">Admin Dashboard</a></li>
    <li class="active">All Events</li>
    <li><a href="<%= new_admin_event_path %>">Add New Event</a></li>
  </ol>
</div>
<div class="container">
  <h1 class="text-center">All Events</h1>

  <div class="table-responsive">
    <table class="table table-hover sort">
      <thead>
      <tr>
        <th class="col-md-2">Image</th>
        <th class="col-md-2">Name</th>
        <th class="col-md-4">Description</th>
        <th class="col-md-1">Price</th>
        <th class="col-md-1">Category</th>
        <th class="col-md-1">Status</th>
        <th class="col-md-1">&nbsp;</th>
      </tr>
      </thead>
      <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= image_tag event.image_url, class: "img-small",
                            alt:                    "#{event.name} image" %></td>
          <td><a href="<%= vendor_event_path(vendor: event.user.url,
                                             id:     event.id)
          %>"><%= event.name %></a></td>
          <td class=" word-length"><%= event.description %></td>
          <td><%= number_to_currency(event.price) %></td>
          <td><%= event.category.name %></td>
          <td><%= event.status %></td>
          <td><%= link_to "edit", edit_admin_event_path(event) %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div><!-- /.container -->
