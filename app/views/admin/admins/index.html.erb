      <a href="<%= admin_events_path %>">
        <div class="thumbnail">
          <%= image_tag 'snow-bike-madness.jpg', class: "img-responsive",
                        alt: "snow bike madness image" %>
          <p class="btn btn-block btn-primary">View All Events</p>
        </div>
      </a>
