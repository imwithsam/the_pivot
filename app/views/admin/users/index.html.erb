<div class="container">
  <ol class="breadcrumb">
    <li><a href="<%= admin_dashboard_path %>">Admin Dashboard</a></li>
    <li class="active">All Vendors</li>
  </ol>
  <h3 class="text-center">All Vendors</h3>
  <br>
  <div class="table-responsive">
    <table class="table table-hover sort">
      <thead>
        <tr>
          <th>Store Name</th>
          <th>Vendor Name</th>
          <th>Vendor Email</th>
          <th>Update Vendor</th>
        </tr>
      </thead>
      <tbody>
        <% @vendors.each do |vendor| %>
          <tr>
            <td>
              <%= link_to "#{vendor.username}", "/#{vendor.url}" %>
            </td>
            <td><%= vendor.full_name %></td>
            <td><%= vendor.email %></td>
            <td><%= link_to "Update", edit_admin_user_path(vendor.id) %>
                <%= link_to "Delete", admin_user_path(vendor), method: :delete %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <%= link_to "Create New User", new_admin_user_path,
    class: "btn btn-primary btn-lg new-user-btn" %>
